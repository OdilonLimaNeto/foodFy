{% extends "layout.njk" %}
{% block title %}
        <title>Receitas do Foodfy</title>
{% endblock title %}

{% block content %}
{% block headerLinks %}
{% endblock headerLinks %}
        <div class="black">
            <div class="header">
                <img src="/logo2.png" alt="logo">
            </div>
        </div>

        <div class="topic"> Gerenciar receitas</div>
        
        <section class="container-initial">
            <div class="cards">
                {% for item in items %}
                    <div class="card">
                        <img src="{{item.image}}" alt="{{item.title}}">
                        <div class="content">
                            <p class="title">{{item.title}}</p>
                            <p class="author">{{item.author}}</p>
                            <a href="#">Visualizar</a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </section>

        {# <footer>
            <p>Todos direitos reservados, receitas Foodfy.</p>
        </footer> #}

        <script src="/scripts.js"></script>
{% endblock content %}
