{% extends "layout.njk" %}
{% block title %}
        <title>Foodfy</title>
{% endblock title %}

{% block content %}
        <section class="banner">
            <div class="banner-text">
                <h3>As melhores receitas</h3>
                <p>Aprenda a construir os melhores pratos</p>
                <p>com receitas criadas por profissionais</p>
                <p>do mundo inteiro.</p>
            </div>
            <div class="banner-image">
                <img src="/chef.png" alt="logo do chefinho">
            </div>
        </section>

        <div class="most-acessed-text">
            <h3>Mais acessadas</h3>
        </div>

        <section class="most-acessed">
            {% for item in items %}
                    <div class="card-container">
                        <div class="card-image">
                            <img src="{{ item.image }}" alt="imagem de {{ item.title }}">
                        </div>
                        <div class="card-name">
                            <p>{{ item.title }}</p>
                        </div>
                        <div class="card-author">
                            <p>por {{ item.author }}</p>
                        </div>
                    </div>
            {% endfor %}
        </section>

        {# <footer>
            <p>Todos direitos reservados, receitas Foodfy.</p>
        </footer> #}
{% endblock content %}
