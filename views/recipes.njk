{% extends "layout.njk" %}
{% block title %}
        <title>Receitas do Foodfy</title>
{% endblock title %}

{% block content %}
        <section class="recipes">
            {% for item in items %}
                <div class="card-container" id="{{item.title}}">
                    <div class="card-image">
                        <img src="{{item.image}}" alt="imagem de {{item.title}}">
                    </div>
                    <div class="card-name">
                        <p>{{item.title}}</p>
                    </div>
                    <div class="card-author">
                        <p>{{item.author}}</p>
                    </div>
                </div>
            {% endfor %}
        </section>

        {# <footer>
            <p>Todos direitos reservados, receitas Foodfy.</p>
        </footer> #}

        <script src="/scripts.js"></script>
{% endblock content %}
